<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Hlavička s jménem člena a jeho násobitelem -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/memberNameTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Jméno člena"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/memberMultiplierEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Násobitel"
            android:inputType="number"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/updateMultiplierButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upravit" />
    </LinearLayout>

    <!-- Tlačítko pro přidání nové utraty -->
    <Button
        android:id="@+id/addExpenseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Přidat novou utratu"
        android:layout_marginTop="8dp" />

    <!-- Kontejner pro seznam utrat -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:id="@+id/expenseListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</LinearLayout>
